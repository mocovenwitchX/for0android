#!/system/bin/sh
#
# encrypted secret created with
# gpg --homedir . -r Test --no-permission-warning --encrypt secret

HOMEDIR="--homedir ."
LOGGING="--debug-level advanced --log-file /data/data/info.guardianproject.gpg/app_log/gpg2-pinentry.log "
ARGS="--no-tty $HOMEDIR $LOGGING"

gpg2 $ARGS -d secret.gpg
